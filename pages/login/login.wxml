<!--pages/login/login.wxml-->
<view class='wrap'>
  <image class='bg' src='../../public/pics/bg.jpg'></image>
  <text class='title'>{{title}}</text>
  <form bindsubmit='formSubmit'>
    <view class='i_group'>
      <text>工号:</text>
      <input name='job_num'></input>
    </view>
    <view class='i_group'>
      <text>密码:</text>
      <input type='password' name='pwd'></input>
    </view>
    <button form-type='submit'>sign in</button>
  </form>
</view>
