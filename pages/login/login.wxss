/* pages/login/login.wxss */
pages{
  position: relative;
}
.wrap{
  width: 100%;
  height: 100%;
  position: absolute;
}
.wrap .bg{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.title{
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  position: absolute;
  top: 200rpx;
  width: 100%;
  text-align: center;
}
form{
  position: absolute;
  width: 100%;
  box-sizing: border-box;
  top: 350rpx;
  padding: 0 120rpx;
}
form button{
  width: 60%;
  color: #526A5A;
  margin-top: 50rpx;
  background: #fdc57b;
  border-radius: 50rpx;
}
.button-hover {
  background-color: #C5A97A;
}
.i_group{
  position: relative;
  width: 100%;
  height: 120rpx;
}
.i_group text{
  color: #fff;
  position: absolute;
  left: 0;
  display: inline-block;
  margin-bottom: 2rpx;
}
.i_group input{
  width: 100%;
  float: right;
  caret-color:#fff;
  color: #fff;
  padding-left: 140rpx;
  /* padding-bottom: 70rpx; */
  box-sizing: border-box;
  border-bottom: 1rpx solid #fff;
}